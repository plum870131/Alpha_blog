<%# 確認是否有error %>
<% if @article.errors.any? %>
    <div class="container mx-auto alert alert-danger m-3 alert-dismissible fade show" role="alert">
        <h3 class="alert-heading"> Can't save article with following errors </h3>
        <hr/>
        <ul>
            <% @article.errors.full_messages.each do |mes| %>
                <li><%= mes %></li>
            <% end %>
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

    </div>  
<% end %>