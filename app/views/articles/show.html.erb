

<div class = "container d-flex flex-column align-items-center my-5">

    <div class="card text-center m-2 w-75 shadow" >
        <div class="card-header fst-italic">
            Featured
        </div>
        <div class="card-body">
            <h5 class="card-title"><%= link_to @article.title, article_path(@article), class: "text-success" %></h5>
            <div class="card-text text-start m-3"><%= simple_format(@article.descriptions, length: 100, separator: " ") %></div>
            <%# <a href="#" class="btn btn-primary">Go somewhere</a> %>
            <%= link_to "Show", article_path(@article), class: "btn btn-outline-dark" %>
            <%= link_to "Edit", edit_article_path(@article),class: "btn btn-outline-success"  %>
            <%= link_to "Delete", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } ,class: "btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-muted">
            Created <%= time_ago_in_words(@article.created_at) %> ago, edited <%= time_ago_in_words(@article.updated_at) %> ago.
        </div>
    </div>

</div>

