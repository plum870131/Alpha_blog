<h1 class="text-center m-3">Blog Users</h1>

<div class="apple_pagination mb-3">
    <%= will_paginate @users, :container => false %>
  </div>

<div class = "container d-flex flex-column align-items-center">
    <% @users.each do |user| %>
        <%# <div class="container"> %>
            <div class="card text-center m-2 w-75 shadow" >
                <div class="card-header fst-italic">
                    <%= link_to user.name, user_path(user) %>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to gravatar_for(user, size: 100), user_path(user), class: "text-success" %></h5>
                    <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
                    <%# <a href="#" class="btn btn-primary">Go somewhere</a> %>
                    <%= link_to "View Profile", user_path(user), class: "btn btn-outline-dark" %>
                    <%= link_to "Edit Profile", edit_user_path(user),class: "btn btn-outline-success"  %>
                </div>
                <div class="card-footer text-muted">
                    Joined <%= time_ago_in_words(user.created_at) %> ago, edited <%= time_ago_in_words(user.updated_at) %> ago.
                </div>
            </div>
        <%# </div> %>
    <% end %>
</div>

<div class="d-grid gap-2 col-6 mx-auto m-3 " >
    <%= link_to "New Article", new_article_path, class: "btn btn-primary text-light p-3 fs-4" %>
</div>

<div class="apple_pagination mb-3">
    <%= will_paginate @users, :container => false %>
  </div>

